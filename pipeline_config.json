{
  "pipeline": {
    "name": "freelancer-automation",
    "version": "1.0"
  },

  "stages": {
    "parser": {
      "description": "Extract structured data from raw ad text",
      "provider": "anthropic",
      "model": "claude-3-haiku-20240307",
      "tier": "cheap",
      "max_tokens": 2048,
      "temperature": 0
    },

    "assessor": {
      "description": "Evaluate feasibility, economics, generate proposal",
      "provider": "anthropic",
      "model": "claude-sonnet-4-20250514",
      "tier": "medium",
      "max_tokens": 4096,
      "temperature": 0
    },

    "executor": {
      "description": "Execute task and produce deliverables",
      "provider": "anthropic",
      "model": "claude-sonnet-4-20250514",
      "tier": "medium",
      "max_tokens": 8192,
      "temperature": 0
    }
  },

  "providers": {
    "anthropic": {
      "api_key_env": "ANTHROPIC_API_KEY",
      "base_url": null
    },
    "openai": {
      "api_key_env": "OPENAI_API_KEY",
      "base_url": null
    },
    "openrouter": {
      "api_key_env": "OPENROUTER_API_KEY",
      "base_url": "https://openrouter.ai/api/v1"
    },
    "local": {
      "api_key_env": null,
      "base_url": "http://localhost:8000/v1"
    }
  },

  "cost_tiers": {
    "cheap": {
      "input_per_1m": 0.10,
      "output_per_1m": 0.10
    },
    "medium": {
      "input_per_1m": 0.50,
      "output_per_1m": 0.50
    },
    "expensive": {
      "input_per_1m": 3.00,
      "output_per_1m": 15.00
    }
  },

  "thresholds": {
    "min_feasibility_score": 0.5,
    "min_margin_percent": 30
  },

  "output": {
    "base_dir": "data/pipeline_runs",
    "save_intermediate": true
  }
}
